<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="100" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100"/>
				<ColumnDefinition Width="550"/>
				
			</Grid.ColumnDefinitions>

			<TextBlock Grid.Column="0" Text="Путь:" Margin="40 37 0 0 " FontSize="23" FontFamily="Consolas"/>
			
			
			<TextBox Grid.Column="1"  Margin="0 37 0 0" FontSize="23" FontFamily="Consolas" />
			

			<Button Grid.Column="2" Content="Обзор" FontSize="23" FontFamily="Consolas" Margin="25"
				Height="30" />
		</Grid>

		<TreeView Grid.Row="1"></TreeView>
    </Grid>
</Window>
